{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "jsx": "react-jsx",
        "module": "ES2022",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "~/*": [
                "./*"
            ],
            "base/*": [
                "./Application/Public/assets/src/base/ts/*"
            ],
        },
        "sourceMap": true,
        "declaration": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "isolatedModules": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}
